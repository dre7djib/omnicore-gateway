{
  "name": "omnicore-gateway",
  "version": "1.0.0",
  "description": "Omnicore API Gateway with RBAC",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "npx nodemon src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed:roles": "node scripts/seed-roles.js",
    "bootstrap:principal": "node scripts/bootstrap-principal.js",
    "test": "npx jest",
    "test:unit": "npx jest --coverage",
    "test:watch": "npx jest --watch",
    "lint": "npx --yes eslint@8 src tests",
    "lint:fix": "npx --yes eslint@8 src tests --fix",
    "security:audit": "npm audit --audit-level=high --omit=dev",
    "security:fix": "npm audit fix",
    "deps:check": "npx --yes npm-check-updates",
    "deps:update": "npx --yes npm-check-updates -u"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-correlation-id": "^3.0.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.17.1",
    "pino": "^10.2.1",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.1",
    "jest": "29.7.0",
    "jest-environment-node": "^29.7.0",
    "prisma": "^7.2.0",
    "nodemon": "^3.1.11",
    "npm-check-updates": "^19.3.2",
    "supertest": "^7.2.2"
  }
}
